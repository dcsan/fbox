body {
  margin 0
  padding 0
}

basics()
  margin: 0px;
  padding: 0;
  border-radius: 7pt;



// ----------  default layout wide  -------------

#main {
  // min-height: 500px;
  // min-height: 100%    // doesnt work
  position: fixed
  top: 0px
  left: 0px

  height 100%
  width: 100%
  margin: 0px;
  padding: 0px;
  
  // border: 1px solid #8888bb;

  display: -webkit-flex;
  display:         flex;
  -webkit-flex-flow: row;
         flex-flow: row;
 }


#main > square {
  basics()
  background: #dddd88;
  -webkit-flex: 3 1 70%;
         flex: 3 1 70%;
  -webkit-order: 2;
         order: 2;
}

#main > nav {
  basics()
  background: #ccccff;
  -webkit-flex: 1 6 10%;
         flex: 1 6 10%;
  -webkit-order: 1;
         order: 1;
}

#main > cards {
  basics()

  background: #ccccff;
  -webkit-flex: 1 6 20%;
         flex: 1 6 20%;
  -webkit-order: 3;
         order: 3;
 }

header, footer {
  basics()
  min-height: 60px;
  background: #ffeebb;
}


// ----------  default layout phone  -------------
// Too narrow to support three columns

@media all and (max-width: 640px) {

  #main, #page {
    -webkit-flex-flow: column;
    flex-flow: column;
    flex-direction: column;
    // min-height 100%
    // height 800px
  }

  #main > square {
    flex 1 6 80%
  }

  #main > cards {
    border 2px solid red
    // min-height 30%
    flex: 1 6 10%;
  }

  #main > square, #main > nav, #main > cards {
    /* Return them to document order */
    -webkit-order: 0;
    order: 0;
  }

  #main > nav, #main > header, footer {
    min-height: 50px;
    max-height: 50px;
  }
 
}


