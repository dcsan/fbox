// --- tall / phone

.blocky {
  .nav {
    position fixed
    top 0px
    height 10%
    background-color black
    color white
    width 100%
  }
  .square {
    position absolute
    top 10%
    width 100%
    height 70%
    background-color #26a340
  }
  .deck {
    position fixed
    bottom 0px
    height 20%
    width 100%
    background-color #aff6e6
  }
}


// --- desktop / wide

@media (min-aspect-ratio: 11/10) {
  .blocky {
    position: fixed
    top 0
    left 0
    width 100%
    height 100%
    
    .nav {
      position absolute
      left 0
      top 0
      width 10%
      height 100%
    }
    .square {
      position absolute
      top 0
      left 10%
      width 70%
      height 100%
    }
    
    .deck {
      position absolute
      height 100%
      top 0
      right 0
      width 20%
    }
  }

}