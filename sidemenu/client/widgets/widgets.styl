.widget {
  position relative
  opacity 0.1   // initial hide
  padding-top 10px
  padding-bottom 10px
  border-bottom 1px dotted #ccc
  padding-left 10px
  padding-right 10px

  // .inset {
  //   padding-left 10px
  //   padding-right 10px
  // }

  .headline {
    font-family 'Oswald'
    font-size 3rem
    border-bottom 4px solid black
  }

  .caption {
    font-size 2rem
  }

  .wideImage {
    width 100%
  }

  .thinking {
    .thought {
      font-size 2rem
      font-style bold
    }
    .afterthought {
      font-size 2rem
    }
  }

  .shouting {
    font-family 'Mouse Memoirs'
    font-size 3rem
    color: red
  }

  .packitem {
    width 100px
    border 1px solid #eee
    border-radius 10px
    box-shadow 1px 1px 4px #444
    margin-right 10px
    cursor pointer
    &:hover {
      transform: scale(1.1, 1.1)
    }
  }

  #inputBox {
    font-size 30px
    height 50px
    left 10px
    right 10px
    width 90%
  }

}



@media (min-width: 992px) {
  .widget {
    .wideImage {
      width 50%
    }    
  }
  // html { font-size: 120%; } 
}
